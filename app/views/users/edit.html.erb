<% provide(:title, "Edit user") %>
<link
      rel="stylesheet"
      type="text/css"
      href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/semantic.min.css"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />
    <main class="row align-items-center justify-content-center h-100">
      <form
        class="card col-lg-7 text-justify text-center d-flex flex-column"
        enctype="multipart/form-data"
        action="UserEdit"
        method="POST"
        style="height: 80%"
      >
      <img class="" src="assets/userRegister.svg" alt="rails" height="20%" />
     <h1 class="card-title flex-fill"><strong>プロフィール編集</strong></h1>
     <label for="inputEmail" class="sr-only">Eメールアドレス</label>

    <%= form_for(@user) do |f| %>
      <%= f.label :name, class: "sr-only" %>
      <%= f.text_field :name, class: "form-control card-text flex-fill", placeholder:"ユーザー名"%>

      <%= f.label :gender, class: "sr-only" %>
      <%= f.collection_select :gender_id, Gender.all, :id, :gender, {include_blank: "性別"} , {class: "form-control card-text flex-fill"} %>

      <%= f.label :grade, class: "sr-only" %>
        <%= f.collection_select :grade_id, Grade.all, :id, :grade, {include_blank: "学年"}, {class: "form-control card-text flex-fill"} %>

      <%= f.label :email, class: "sr-only" %>
      <%= f.text_field :email, class: "form-control form-control-first card-text flex-fill", placeholder:"ID(メールアドレス)"%>

      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, class: "form-control form-control-last card-text flex-fill", placeholder:"パスワード"%>

      <%= f.label :password_confirmation, class: "sr-only" %>
      <%= f.password_field :password_confirmation, class: "form-control form-control-last card-text flex-fill", placeholder:"確認用パスワード"%>

     <%= f.submit "登録変更", class: "btn btn-primary" %>

        <p
          class="mt-3 mb-3 text-muted card-text text-justify text-center flex-fill"
        >
          &copy; System Engineering Team
        </p>
        <% end %>
      </form>
    </main>


