<% provide(:title, 'Lab register') %>
<h1>Lab register</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@lab) do |f| %>
     <%= render 'shared/error_messages', model: f.object %>
      <%= f.label :lab %>
      <%= f.text_field :lab, class: 'form-control' %>

      <%= f.label :university %>
      <%= f.collection_select :university_id, University.all, :id, :university, include_blank: '選択して下さい' %>

      <%= f.label :overview %>
      <%= f.text_area :overview, class: 'form-control' %>

      <%= f.submit "Create lab", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
